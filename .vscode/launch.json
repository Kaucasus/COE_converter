    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: run coeconvertor",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/coeconvertor.py",
            "args": ["${workspaceFolder}/tests/${input:selectImage}",],
            "console": "integratedTerminal"
            
        }
    ],
    "inputs": [
        {
            "id": "testImage",
            "type": "promptString",
            "description": "input image file from test"
        },
        {
            "id": "selectImage",
            "type": "pickString",
            "description": "Select image",
            "options": ["test.png","sprite.png","warlockSpriteSheet.png"],
            "default": "test.png"
        }
    ]
}